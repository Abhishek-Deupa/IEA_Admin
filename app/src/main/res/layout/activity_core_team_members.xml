<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoreTeamMembers"
    android:background="@color/different_black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/core_team_member_back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_icon"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="18dp"
            android:layout_marginTop="42dp"/>

        <TextView
            android:id="@+id/core_team_member_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="@string/core_team_member"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="#FBFBFB"
            app:layout_constraintStart_toEndOf="@id/core_team_member_back_button"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="22dp"/>

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#969696"
            android:text="@string/dummy_text_short"
            android:fontFamily="@font/poppins_regular"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/core_team_member_text"
            android:layout_marginTop="16dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_text"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>