<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".explore_iea">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/exploreus_back_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/back_icon"
            android:backgroundTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/aboutiea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inriasans_regular"
            android:text="About IEA"
            android:textColor="@color/black"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vision"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inriasans_regular"
            android:gravity="center"
            android:text="Our Vision"
            android:textColor="@color/different_black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/aboutiea" />

        <TextView
            android:id="@+id/vision_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="25dp"
            android:text="@string/visontext1"
            android:textAlignment="viewStart"
            android:textColor="@color/different_black"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/vision"
            tools:layout_editor_absoluteX="25dp" />

        <TextView
            android:id="@+id/vision_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="25dp"
            android:text="@string/visontext2"
            android:textAlignment="viewStart"
            android:textColor="@color/different_black"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/vision_text1"
            tools:layout_editor_absoluteX="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vision_text3"
            android:textSize="12sp"
            android:textColor="@color/different_black"
            android:text="@string/visontext3"
            android:textAlignment="viewStart"
            android:layout_marginStart="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/vision_text2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vision_text4"
            android:textSize="12sp"
            android:textColor="@color/different_black"
            android:text="@string/visontext4"
            android:textAlignment="viewStart"
            android:layout_marginStart="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/vision_text3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vision_text5"
            android:textSize="12sp"
            android:textColor="@color/different_black"
            android:text="@string/visontext5"
            android:textAlignment="viewStart"
            android:layout_marginStart="25dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/vision_text4"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/aboutcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_alignParentStart="true"
            app:layout_constraintTop_toBottomOf="@+id/vision_text5"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="@color/different_black"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/inriasans_regular"
                    android:text="About Us"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/abouttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inriasans_regular"
                    android:text="@string/abouttext"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Our Mission"
                    android:fontFamily="@font/inriasans_regular"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/missiontext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inriasans_regular"
                    android:text="@string/missiontext"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/aboutcard"
            android:id="@+id/overviewcard"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="@color/different_black"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Overview"
                    android:id="@+id/overview"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/overview"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:id="@+id/overview_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    app:layout_constraintTop_toBottomOf="@+id/overview_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:id="@+id/review" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/review"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Benefits"
                    android:textSize="20sp"
                    android:id="@+id/benefit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/benefit"
                    android:layout_marginTop="10dp"
                    android:text="@string/benefit1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/grey"
                    android:textAlignment="viewStart"
                    android:textSize="12sp"
                    android:id="@+id/benefit_text1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/benefit_text1"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="15dp"
                    android:text="@string/benefit2"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/grey"
                    android:textAlignment="viewStart"
                    android:textSize="12sp"
                    android:id="@+id/benefit_text2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/benefit_text2"
                    android:layout_marginTop="7dp"
                    android:text="@string/benefit3"
                    android:layout_marginStart="15dp"
                    android:textAlignment="viewStart"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:id="@+id/benefit_text3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/benefit_text3"
                    android:layout_marginTop="7dp"
                    android:textAlignment="viewStart"
                    android:text="@string/benefit4"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:id="@+id/benefit_text4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/benefit_text4"
                    android:layout_marginTop="7dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="15dp"
                    android:text="@string/benefit5"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:id="@+id/benefit_text6" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/benefit_text6"
                    android:layout_marginTop="7dp"
                    android:text="@string/benefit6"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:id="@+id/benefit_text7" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/benefit_text7"
                    android:layout_marginTop="7dp"
                    android:textAlignment="viewStart"
                    android:text="@string/benefit7"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:id="@+id/benefit_text8" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/benefit_text8"
                    android:layout_marginTop="7dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="15dp"
                    android:text="@string/benefit8"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:id="@+id/benefit_text9" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/benefit_text9"
                    android:layout_marginTop="7dp"
                    android:textAlignment="viewStart"
                    android:layout_marginStart="15dp"
                    android:text="@string/benefit9"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:id="@+id/benefit_text10" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/benefit_text10"
                    android:layout_marginTop="7dp"
                    android:text="@string/benefit10"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/grey"
                    android:textSize="12sp"
                    android:id="@+id/benefit_text5" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/benefit_text5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"

                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/join_now"
                        android:textColor="@color/different_black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="JOIN NOW"/>
                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/help"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="70dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/different_black"
            app:layout_constraintTop_toBottomOf="@+id/overviewcard"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Contact Support for Help"
                android:fontFamily="@font/inriasans_regular"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/help_btnr"
            android:src="@drawable/help"
            app:layout_constraintStart_toEndOf="@+id/help"
            app:layout_constraintTop_toBottomOf="@+id/overviewcard"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/round_corner"
            android:layout_marginEnd="20dp"
            android:importantForAccessibility="no"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>